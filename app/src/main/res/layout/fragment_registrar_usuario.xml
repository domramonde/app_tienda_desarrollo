<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.dronesolutions.appgamarra.ui.fragment.RegistrarUsuarioFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/registrar_txt_view_titulo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Regístrate"
            style="@style/TextAppearance.AppCompat.Large"
            android:layout_centerInParent="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="10dp"
            />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:inputType="textEmailAddress"
            android:ems="10"
            android:id="@+id/registrar_txt_correo"
            android:layout_marginTop="30dp"
            android:layout_below="@+id/registrar_txt_view_titulo"
            android:layout_centerHorizontal="true"
            android:background="@color/colorWhiteTranparent"
            android:padding="9dp"
            android:hint="correo"
            android:layout_marginRight="120dp"
            android:drawableLeft="@drawable/ic_email"

            />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/registrar_txt_nombre"
            android:background="@color/colorWhiteTranparent"
            android:padding="9dp"
            android:hint="nombre"
            android:layout_below="@+id/registrar_txt_correo"
            android:layout_alignStart="@+id/registrar_txt_correo"
            android:layout_marginTop="12dp"
            android:layout_alignEnd="@+id/registrar_txt_correo"
            android:drawableLeft="@drawable/ic_user"
            />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/registrar_txt_apellidos"
            android:background="@color/colorWhiteTranparent"
            android:padding="9dp"
            android:hint="apellidos"
            android:layout_below="@+id/registrar_txt_nombre"
            android:layout_alignStart="@+id/registrar_txt_nombre"
            android:layout_alignEnd="@+id/registrar_txt_correo"
            android:drawableLeft="@drawable/ic_user"
            />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/registrar_txt_contrasena"
            android:background="@color/colorWhiteTranparent"
            android:padding="9dp"
            android:hint="contraseña"
            android:layout_below="@+id/registrar_txt_apellidos"
            android:layout_alignStart="@+id/registrar_txt_apellidos"
            android:layout_alignEnd="@+id/registrar_txt_correo"
            android:drawableLeft="@drawable/ic_pass"
            />
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ACEPTAR"
            android:id="@+id/registrar_btn_aceptar"
            android:layout_below="@+id/registrar_txt_contrasena"
            android:layout_alignStart="@+id/registrar_txt_correo"
            android:layout_marginTop="15dp"
            style="@style/Base.Widget.AppCompat.Button.Colored"
            android:layout_alignEnd="@+id/registrar_txt_correo"
            />

    </RelativeLayout>

</FrameLayout>
